<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <ImageView
            android:id="@+id/diamondd"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:src="@drawable/star" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1500"
            android:layout_toRightOf="@id/diamondd"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="@color/app_pink_color"
            android:textSize="@dimen/_16sdp"
            android:id="@+id/value_text"/>

        <RelativeLayout
            android:id="@+id/doller_button"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/blureshape_2">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:src="@drawable/dollar2" />

            <TextView
                android:id="@+id/value_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_15sdp"
                android:text="@string/_0"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/doller_button">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/black"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>