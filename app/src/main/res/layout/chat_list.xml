<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginHorizontal="20dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/messageTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_my_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/image_four"
                app:civ_border_color="@color/white"
                app:civ_border_width="1dp" />

            <!--            <LinearLayout-->
            <!--                android:layout_width="20dp"-->
            <!--                android:layout_height="20dp"-->
            <!--                android:background="@drawable/round_shape"-->
            <!--                android:backgroundTint="@color/appTextColor"-->
            <!--                android:gravity="center"-->
            <!--                android:layout_alignParentEnd="true"-->
            <!--                android:layout_alignParentBottom="true"-->

            <!--                >-->
            <!--                <TextView-->
            <!--                    android:id="@+id/ic_btn_update_image"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:text="3"-->
            <!--                    android:textSize="12sp"-->
            <!--                    android:layout_gravity="center"-->
            <!--                    android:textColor="@color/white"-->
            <!--                    />-->
            <!--            </LinearLayout>-->
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/relative_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Smile"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Hey! How's it going?"
                android:textColor="@color/grey"
                android:textSize="15sp"

                />
        </LinearLayout>



            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="04:04AM"
                android:textColor="@color/black" />



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_light_pink_color"
        android:layout_marginTop="8dp" />


</LinearLayout>