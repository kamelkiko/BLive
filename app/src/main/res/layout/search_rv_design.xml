<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="185dp"
    android:layout_height="200dp"
    android:layout_margin="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/grey"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey"
            >

            <TextView
                android:id="@+id/cardViewTV66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="#petitbac2"/>
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/ic_baseline_arrow_forward_ios_24"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/description"/>

            <TextView
                android:id="@+id/tx234"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.5M"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                android:background="#434141"
                android:layout_below="@+id/cardViewTV66"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card11"
                android:layout_width="80dp"
                android:layout_height="120dp"
                app:cardCornerRadius="6dp"
                android:layout_below="@+id/tx234"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_girls_1"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/description"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card1212"
                android:layout_toRightOf="@+id/card11"
                android:layout_width="80dp"
                android:layout_height="56.5dp"
                app:cardCornerRadius="6dp"
                android:layout_below="@+id/tx234"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_girls_1"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/description"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_toRightOf="@+id/card11"
                android:layout_width="80dp"
                android:layout_height="56.5dp"
                app:cardCornerRadius="6dp"
                android:layout_below="@+id/card1212"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_girls_1"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/description"
                    />

            </androidx.cardview.widget.CardView>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>