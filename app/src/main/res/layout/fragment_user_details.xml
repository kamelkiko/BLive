<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_20">

            <LinearLayout
                android:id="@+id/ll_main_after_shimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize">

                    <ImageView
                        android:id="@+id/img_cancel"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@drawable/ic_cancel_anus" />

                    <TextView
                        android:id="@+id/tv_username_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:text="Report"
                        android:textColor="@color/app_pink_color"
                        android:textSize="@dimen/sp_14" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.opensource.svgaplayer.SVGAImageView
                        android:id="@+id/profieFrame"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="15dp"
                        android:elevation="12dp"
                        android:scaleType="fitCenter"
                        app:antiAlias="true" />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/dp_10"
                        app:cardCornerRadius="@dimen/dp_40">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civ_user_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_user1"
                            android:visibility="visible" />

                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:hint="User"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtId"


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:hint="@string/bio"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/txtCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:layout_marginStart="@dimen/dp_10"
                        android:background="@drawable/less_curved_bg3"
                        android:drawableLeft="@drawable/location_on_24"
                        android:drawablePadding="@dimen/dp_5"
                        android:drawableTint="@color/app_pink_color"
                        android:gravity="center"
                        android:padding="@dimen/dp_2"
                        android:paddingEnd="@dimen/dp_12"
                        android:text="skjdicv"
                        android:textSize="@dimen/dp_10" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginStart="@dimen/dp_10"
                        android:background="@drawable/less_curved_bg3"
                        android:backgroundTint="@color/yellow"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_2sdp">

                        <ImageView
                            android:id="@+id/textGender"
                            android:layout_width="20dp"
                            android:layout_height="24dp"
                            android:gravity="center_vertical" />


                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_bio_other_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:hint="@string/bio"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/sp_12" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/level_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/less_curved_bg3"
                        android:backgroundTint="@color/grey"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/dp_5">

                        <ImageView
                            android:id="@+id/level_image_user"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="1dp"
                            android:src="@drawable/diamond" />

                        <TextView
                            android:id="@+id/level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="2dp"
                            android:gravity="center_vertical"
                            android:text="Lv.101"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llTalentImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/less_curved_bg3"
                        android:backgroundTint="@color/home_background_color"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/dp_5">

                        <ImageView
                            android:id="@+id/talent_image"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:paddingVertical="@dimen/dp_2"
                            android:src="@drawable/diamond" />

                        <TextView
                            android:id="@+id/likes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_4"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/approveImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/v"
                        android:visibility="gone" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_badges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_badges"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_not_done" />

                    <TextView
                        android:id="@+id/tv_badge_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center"
                        android:text="Badge Name"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/sp_10"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_followers_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_followers_other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:hint="00"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/followers"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/sp_10" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@color/dark_grey" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_following"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:hint="00"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/following"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/sp_10" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@color/dark_grey" />

                    <LinearLayout
                        android:id="@+id/ll_likes_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_likes_other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:hint="00"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/likes"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/sp_10" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@color/dark_grey"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_videos_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:hint="00"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/videos"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/sp_10" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_3">

                    <Button
                        android:id="@+id/btn_follow_user"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginVertical="@dimen/dp_3"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/btn_bg"
                        android:text="@string/follow"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_16" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chat_other_user"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center"
                        android:layout_marginVertical="@dimen/dp_2"
                        android:visibility="visible"
                        app:cardBackgroundColor="@color/grey"
                        app:cardCornerRadius="@dimen/sp_10">

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_giftbox"
                            app:tint="@color/app_pink_color" />


                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mentionOtherUser"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center"
                        android:layout_marginVertical="@dimen/dp_2"
                        android:layout_marginStart="@dimen/dp_10"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/grey"
                        app:cardCornerRadius="@dimen/sp_10">

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_gravity="center"
                            android:src="@drawable/baseline_alternate_email_24" />


                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center"
                        android:layout_marginVertical="@dimen/dp_2"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/grey"
                        app:cardCornerRadius="@dimen/sp_10">

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_instagram" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center"
                        android:layout_marginVertical="@dimen/dp_2"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/grey"
                        app:cardCornerRadius="@dimen/sp_10">

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_youtube" />

                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>

            </LinearLayout>


            <!--        <com.google.android.material.tabs.TabLayout-->
            <!--            android:id="@+id/tab__other_profile"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_marginTop="@dimen/sp_10"-->
            <!--            app:tabIndicatorColor="@color/purple"-->
            <!--            app:tabIndicatorHeight="@dimen/dp_2"-->
            <!--            app:tabTextColor="@color/black" />-->


            <!--        <androidx.viewpager.widget.ViewPager-->
            <!--            android:id="@+id/viewpager_other_profile"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent" />-->


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>