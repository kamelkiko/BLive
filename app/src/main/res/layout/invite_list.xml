<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg_color"
    android:layout_marginVertical="@dimen/_5sdp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_hour"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:src="@drawable/app_logo" />

        <TextView
            android:id="@+id/hour_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/profile_hour"
            android:text="Bang Dreams"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/Lv_lay"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:layout_below="@id/hour_name"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/profile_hour"
            android:background="@drawable/trynowdesign">

            <ImageView
                android:id="@+id/level_img"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:background="@drawable/policebadge2" />

            <TextView
                android:id="@+id/lv_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="0dp"
                android:layout_toRightOf="@+id/level_img"
                android:text="Lv: 1"
                android:textColor="#ec8b3a"
                android:textSize="8sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inviteButton"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/follow_back"
            android:elevation="3dp">


            <TextView
                android:id="@+id/inviteTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="0dp"
                android:text="Invite"
                android:textColor="@color/app_pink_color"
                android:textSize="10sp" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btnAccept"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:background="@drawable/follow_back"
            android:elevation="3dp">


            <TextView
                android:id="@+id/confirmTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="0dp"
                android:text="Confirm"
                android:textColor="@color/app_pink_color"
                android:textSize="10sp" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/userPosition"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:background="@drawable/follow_back"
            android:elevation="3dp">


            <TextView
                android:id="@+id/positionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="0dp"
                android:text="Admin"
                android:textColor="@color/app_pink_color"
                android:textSize="10sp" />

        </RelativeLayout>

        <!--        <View-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="0.2dp"-->
        <!--            android:layout_alignParentBottom="true"-->
        <!--            android:background="@color/black" />-->

    </RelativeLayout>



</RelativeLayout>