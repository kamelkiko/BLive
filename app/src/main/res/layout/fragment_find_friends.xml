<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExtraFragments.FindFriends">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            >
            <ImageView
                android:id="@+id/back_img_findfriend"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:rotation="180"
                android:layout_marginStart="10dp"
                android:background="@drawable/ic_baseline_arrow_forward_ios_24"
                android:backgroundTint="@color/dark_grey"
                android:contentDescription="@string/description" />
            <RelativeLayout
                android:id="@+id/fndsSearchRL"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:elevation="2dp"
                android:layout_toEndOf="@id/back_img_findfriend"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/round_corners_26dp"
                android:backgroundTint="#d9d9d9"
                android:layout_toLeftOf="@+id/forwardArrow"
                >
                <ImageView
                    android:id="@+id/findFriendsSearchImg"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/ic_search_1"
                    android:backgroundTint="@color/dark_grey"
                    android:contentDescription="@string/description"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/findFriendsSearchImg"
                    android:layout_toLeftOf="@+id/findFriendsSearchImg2"
                    android:layout_marginHorizontal="10dp"
                    android:hint="Search"
                    android:background="#d9d9d9"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:id="@+id/findFriendsSearchImg2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/dark_grey"
                    android:background="@drawable/ic_add_user__1_"
                    android:contentDescription="@string/description"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/forwardArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_house_black_silhouette_without_door"
                android:backgroundTint="@color/dark_grey"
                android:contentDescription="@string/description"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/rect_grey_strock">
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/full_round_corners"
                android:layout_centerVertical="true"
                android:elevation="2dp"
                android:id="@+id/frdsBookRL"
                android:backgroundTint="@color/app_pink_color"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_phone_book__1_"
                    android:backgroundTint="@color/white"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/description"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:text="@string/find_contacts_friends"
                android:layout_toRightOf="@+id/frdsBookRL"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_baseline_arrow_forward_ios_24"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/description"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/rect_grey_strock">

            <ImageView
                android:id="@+id/frdsBookRL1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/facebook__2_"
                android:layout_centerVertical="true"
                android:elevation="2dp"
                android:contentDescription="@string/description"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:text="Find Facebook Friends"
                android:layout_toRightOf="@+id/frdsBookRL1"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_baseline_arrow_forward_ios_24"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/description"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/rect_grey_strock">

            <ImageView
                android:id="@+id/frdsBookRL12"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/whatsapp_1"
                android:layout_centerVertical="true"
                android:elevation="2dp"
                android:contentDescription="@string/description"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:text="Find Whatsapp Friends"
                android:layout_toRightOf="@+id/frdsBookRL12"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_baseline_arrow_forward_ios_24"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/description"/>


        </RelativeLayout>



    </LinearLayout>

</FrameLayout>