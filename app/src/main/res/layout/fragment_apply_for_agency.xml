<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity.Profile.category.ApplyForAgencyFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize">

                    <ImageView
                        android:id="@+id/imageBack_applyAgency"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:contentDescription="@string/description"
                        android:rotation="180" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apply For Agency"
                        android:textSize="16sp"
                        android:layout_toRightOf="@+id/imageBack_applyAgency"
                        android:layout_centerVertical="true"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/black"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="20sp">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Special Approval : "
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/approval_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/name"
                        android:background="@android:color/transparent"
                        android:textSize="15dp"
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="10dp"
                        android:paddingHorizontal="10dp"
                        android:hint="Enter name "
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20sp">
                    <TextView
                        android:id="@+id/id_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aadhaar card front: "
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/id_proof"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Select"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="10dp"
                        android:textSize="12sp"
                        android:layout_toEndOf="@id/id_text"
                        android:textColor="@color/dark_grey"/>

                    <ImageView
                        android:id="@+id/done_id_proof"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_baseline_done_24"
                        android:layout_toEndOf="@id/id_proof"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/aadhaar_card_front_proof"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@color/pressed_bg"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20sp">
                    <TextView
                        android:id="@+id/aadhaar_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aadhaar card back: "
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/aadhaar_back"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Select"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="10dp"
                        android:textSize="12sp"
                        android:layout_toEndOf="@id/aadhaar_"
                        android:textColor="@color/dark_grey"/>
                    <ImageView
                        android:id="@+id/done_aadhaar_back"
                        android:layout_width="20dp"
                        android:layout_height="20sp"
                        android:visibility="gone"
                        android:src="@drawable/ic_baseline_done_24"
                        android:layout_toEndOf="@id/aadhaar_back"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:id="@+id/aadhaar_card_back_proof"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@color/pressed_bg"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20sp">
                    <TextView
                        android:id="@+id/address_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Government Address Id Proof : "
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/get_address"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Select"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="10dp"
                        android:textSize="12sp"
                        android:layout_toEndOf="@id/address_text"
                        android:textColor="@color/dark_grey"/>
                    <ImageView
                        android:id="@+id/done_address"
                        android:layout_width="20dp"
                        android:layout_height="20sp"
                        android:visibility="gone"
                        android:src="@drawable/ic_baseline_done_24"
                        android:layout_toEndOf="@id/get_address"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/address_text_proof"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@color/pressed_bg"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20sp">
                    <TextView
                        android:id="@+id/fam_address_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Family Address Id Proof : "
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/family_Address"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Select"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="15dp"
                        android:textSize="12sp"
                        android:layout_toEndOf="@id/fam_address_text"
                        android:textColor="@color/dark_grey"/>
                    <ImageView
                        android:id="@+id/done_family_add"
                        android:layout_width="20dp"
                        android:layout_height="20sp"
                        android:visibility="gone"
                        android:src="@drawable/ic_baseline_done_24"
                        android:layout_toEndOf="@id/family_Address"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/address_family_proof"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@color/pressed_bg"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20sp">
                    <TextView
                        android:id="@+id/deposit_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deposit Amount: "
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/deposit_amount"
                        android:background="@drawable/rect_grey_strock"
                        android:textSize="15dp"
                        android:paddingHorizontal="10dp"
                        android:inputType="number"
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="10dp"
                        android:hint="â‚¹ 500 "
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20sp">
                    <TextView
                        android:id="@+id/approval_name_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name : "
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/special_name"
                        android:layout_width="match_parent"
                        android:focusable="false"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/approval_name_"
                        android:background="@android:color/transparent"
                        android:textSize="15dp"
                        android:singleLine="true"
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="10dp"
                        android:paddingHorizontal="10dp"
                        android:hint="Enter name "
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20sp">
                    <TextView
                        android:id="@+id/introduce_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password : "
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/introduce_name_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/introduce_name"
                        android:background="@android:color/transparent"
                        android:textSize="15dp"
                        android:inputType="textPassword"
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="10dp"
                        android:paddingHorizontal="10dp"
                        android:hint="Password"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20sp">
                    <TextView
                        android:id="@+id/introduce_id_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email Id : "
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/introduce_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/introduce_id_"
                        android:background="@android:color/transparent"
                        android:textSize="15dp"
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="10dp"
                        android:paddingHorizontal="10dp"
                        android:hint="Email Id "
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20sp">
                    <TextView
                        android:id="@+id/phone_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone : "
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/phone_"
                        android:background="@android:color/transparent"
                        android:textSize="15dp"
                        android:inputType="number"
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="10dp"
                        android:paddingHorizontal="10dp"
                        android:hint="Phone"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        tools:ignore="Autofill" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"/>
                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20sp">
                    <TextView
                        android:id="@+id/agencyCode_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agency Code: "
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/agencyCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/agencyCode_"
                        android:background="@android:color/transparent"
                        android:textSize="15dp"
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="10dp"
                        android:paddingHorizontal="10dp"
                        android:hint="Agency Code"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20sp">
                    <TextView
                        android:id="@+id/address_proof"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address proof (optional) : "
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/address_proof_optional"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Select"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="15dp"
                        android:textSize="12sp"
                        android:layout_toEndOf="@id/address_proof"
                        android:textColor="@color/dark_grey"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/dot_grey_strock">

                    <ImageView
                        android:id="@+id/image_set"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>


                    <LinearLayout
                        android:id="@+id/add_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/ic_plus__4_"
                            android:backgroundTint="@color/app_pink_color"
                            android:contentDescription="@string/description"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/app_pink_color"
                            android:textSize="14sp"
                            android:layout_marginTop="5dp"
                            android:text="Click to upload Passport size image"/>

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20sp">
                    <TextView
                        android:id="@+id/Bank_Detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank Details : "
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bank_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Select"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="15dp"
                        android:textSize="12sp"
                        android:layout_toEndOf="@id/Bank_Detail"
                        android:textColor="@color/dark_grey"/>
                    <ImageView
                        android:id="@+id/done_bank_detail"
                        android:layout_width="20dp"
                        android:layout_height="20sp"
                        android:visibility="gone"
                        android:src="@drawable/ic_baseline_done_24"
                        android:layout_toEndOf="@id/bank_detail"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20sp">
                    <TextView
                        android:id="@+id/payment_gateway"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Account Details : "
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/select_payment_method"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Select"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="15dp"
                        android:textSize="12sp"
                        android:layout_toEndOf="@id/payment_gateway"
                        android:textColor="@color/dark_grey"/>

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/apply_for_agency"
                    android:background="@drawable/round_corners_26dp"
                    android:layout_marginHorizontal="40dp"
                    android:backgroundTint="@color/app_pink_color"
                    android:text="Apply"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginTop="40dp"
                    android:elevation="2dp"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-medium"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
</RelativeLayout>