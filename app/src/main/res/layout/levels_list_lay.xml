<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/round_corners_26dp"
        android:elevation="8dp"
        android:backgroundTint="@color/level_round"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/vip_level"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:elevation="4dp"
            android:visibility="gone"
            android:layout_marginStart="-3dp"
            android:layout_centerVertical="true"
            android:src="@drawable/vip_level" />

        <RelativeLayout
            android:id="@+id/level_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/less_curved_bg3"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:paddingHorizontal="@dimen/dp_4">


            <ImageView
                android:id="@+id/level_image"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:src="@drawable/heart_new" />

            <TextView
                android:id="@+id/level_number"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@id/level_image"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/less_curved_bg2"
        android:elevation="@dimen/dp_7"
        android:orientation="vertical">
        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 0"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/level_exp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exp: 0"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:background="@drawable/round_corner_bg"
            android:backgroundTint="#f85e45"
            android:textColor="@color/white"
            android:paddingVertical="@dimen/dp_5"
            android:layout_marginHorizontal="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            />

    </RelativeLayout>

</RelativeLayout>