                        <!--                                android:layout_height="wrap_content"-->
                        <!--                                android:layout_marginTop="10dp"-->
                        <!--                                android:background="@drawable/stroke_layout"-->
                        <!--                                android:orientation="horizontal"-->
                        <!--                                android:paddingHorizontal="10dp"-->
