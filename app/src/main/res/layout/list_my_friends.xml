<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_toLeftOf="@id/btn_invitePk"
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_hostImage"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:src="@drawable/app_logo"
                    app:civ_border_color="@color/app_pink_color"
                    app:civ_border_width="@dimen/dp_1" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_hostName"
                        style="@style/text15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UserName"
                        android:textColor="@color/app_pink_color" />

                    <TextView
                        android:layout_marginTop="@dimen/dp_10"
                        android:id="@+id/tv_followers"
                        style="@style/text15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>


            <Button

                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/button_bg"
                android:text="Invite PK"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/btn_invitePk"/>

        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>

</LinearLayout>