<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/toplay"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        android:elevation="@dimen/dp_3">

        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/dp_20"
            android:text="Earning"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="October,2022"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_14" />

                <TextView
                    android:id="@+id/txtMonthlyRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:text="@string/monthly_earning_records"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_14" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/circle"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginHorizontal="@dimen/dp_90"

                    android:layout_marginVertical="@dimen/_40sdp"
                    android:src="@drawable/back_earning" />

                <LinearLayout
                    android:id="@+id/llTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/circle"
                    android:layout_alignTop="@+id/circle"
                    android:layout_alignEnd="@+id/circle"
                    android:layout_alignBottom="@+id/circle"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dimand"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/diamond" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Total Earning"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:text="950"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_20"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/circle"

                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:layout_marginBottom="20dp">

                    <RelativeLayout
                        android:id="@+id/rlTotalEarning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/back_earnin">

                        <ImageView
                            android:id="@+id/dimandRecord"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/diamond" />

                        <TextView
                            android:id="@+id/erningRecord"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_4"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_toRightOf="@+id/dimandRecord"
                            android:text="+850"

                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/erningRecord"
                            android:layout_marginStart="@dimen/dp_4"
                            android:layout_marginBottom="@dimen/dp_5"

                            android:layout_toRightOf="@+id/dimandRecord"
                            android:singleLine="true"
                            android:text="Earning"
                            android:textColor="@color/black"
                            android:textSize="10sp"

                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlTotalEarningTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"

                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/back_earnin">

                        <ImageView
                            android:id="@+id/dimandRecord2"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_5"
                            android:src="@drawable/clock" />

                        <TextView
                            android:id="@+id/erningRecord2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"

                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_toRightOf="@+id/dimandRecord2"
                            android:text="+850"

                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/erningRecord2"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_toRightOf="@+id/dimandRecord2"
                            android:singleLine="true"
                            android:text="Live Duration"

                            android:textColor="@color/black"
                            android:textSize="10sp"

                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlTotalEarningDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/back_earnin">

                        <ImageView
                            android:id="@+id/dimandRecord3"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_5"
                            android:src="@drawable/clock" />

                        <TextView
                            android:id="@+id/erningRecord3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_toEndOf="@+id/dimandRecord3"
                            android:text="+850"

                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/erningRecord3"
                            android:layout_marginStart="@dimen/dp_4"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_toEndOf="@+id/dimandRecord3"
                            android:singleLine="true"

                            android:text="Valid Days"

                            android:textColor="@color/black"
                            android:textSize="10sp"

                            />
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlBaseSalary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_margin="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/back_earnin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="Base Salary"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold" />


                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/zerroMinusBase"
                    android:src="@drawable/diamond"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:id="@+id/zerroMinusBase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/arrowBase"
                    android:text="+0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/arrowBase"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlBonuses"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_margin="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/back_earnin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="Bonuses"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold" />


                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/zerroMinus3"
                    android:src="@drawable/diamond"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:id="@+id/zerroMinus3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/arrow"
                    android:text="+0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlExchange"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/back_earnin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="Exchange"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold" />


                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/zerroMinus"
                    android:src="@drawable/diamond"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:id="@+id/zerroMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/arrow1"
                    android:text="+0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/arrow1"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>