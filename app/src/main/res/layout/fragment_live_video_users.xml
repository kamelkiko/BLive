<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".ExtraFragments.liveVideoUsers">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="55dp"
                    android:id="@+id/topMatch">

                    <LinearLayout
                        android:id="@+id/lLayoutLvVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/btn_bg"
                        android:backgroundTint="#262626"
                        android:orientation="horizontal"
                        android:paddingHorizontal="4dp"
                        android:layout_centerVertical="true"
                        android:paddingVertical="2dp"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageOther"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginVertical="2dp"
                            android:src="@drawable/child_img" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="center_vertical"
                            android:paddingHorizontal="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stella Malone"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:tint="@color/white"
                                    android:backgroundTint="@color/white"
                                    android:background="@drawable/fire__1"
                                    android:layout_gravity="center_vertical"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="6dp"
                                    android:text="1234"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />

                            </LinearLayout>


                        </LinearLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/full_round_corners"
                            android:backgroundTint="@color/app_pink_color"
                            android:padding="8dp"
                            android:elevation="2dp"
                            app:tint="@color/white"
                            android:src="@drawable/ic_plus__4_" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"

                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:elevation="2dp"
                            android:text="Video"
                            android:textSize="12sp"
                            android:padding="5dp"
                            android:background="@drawable/left_round_corners"
                            android:backgroundTint="@color/app_pink_color"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Audio"
                            android:elevation="2dp"
                            android:textSize="12sp"
                            android:padding="5dp"
                            android:background="@drawable/right_rect_corners"
                            android:backgroundTint="#262626"/>


                    </LinearLayout>


                </RelativeLayout>



                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@+id/topMatch"
                    android:layout_width="match_parent"
                    android:layout_height="370dp"
                    android:id="@+id/liveVideoRV"
                    app:spanCount="2"
                    android:layout_marginTop="10dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    tools:listitem="@layout/live_video_user_rv"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_below="@id/liveVideoRV"
                    android:id="@+id/match4"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/btn_bg"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/bg_circle"
                            android:backgroundTint="@color/white"
                            android:padding="5dp"
                            android:src="@drawable/ic_star"
                            app:tint="#a70e13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:text="123"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:text="Andrew"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=" : "
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:text="Followed this host"
                        android:textColor="#af1e61"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_below="@id/match4"
                    android:id="@+id/match5"
                    android:layout_marginVertical="7dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/btn_bg"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/bg_circle"
                            android:backgroundTint="@color/white"
                            android:padding="5dp"
                            android:src="@drawable/diamond"
                            app:tint="@color/app_pink_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:text="123"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:text="Stella"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=" : "
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:text="Do you have Facebook"
                        android:textColor="#cb1d5c"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/match7"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/match5"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="7dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/btn_bg"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/bg_circle"
                            android:backgroundTint="@color/white"
                            android:padding="5dp"
                            android:src="@drawable/diamond"
                            app:tint="#ffb334" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:text="123"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:text="Stella"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=" : "
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:text="Share this live stream"
                        android:textColor="#cb1d5c"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/match7"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_corners_26dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_share_box"
                        android:layout_marginStart="20dp"
                        android:backgroundTint="@color/black"
                        android:contentDescription="@string/description"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share With Friends"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        />


                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/RL76"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="#262626"
                    android:padding="8dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/messageMatch"
                    android:src="@drawable/chat"
                    android:tint="@color/white" />

                <ImageView
                    android:id="@+id/audioLink"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toEndOf="@id/messageMatch"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="#262626"
                    android:padding="8dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/microphone"
                    app:tint="@color/white" />


                <ImageView
                    android:id="@+id/videoImg12"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="#262626"
                    android:padding="8dp"
                    android:layout_marginEnd="15dp"

                    android:layout_toEndOf="@id/audioLink"
                    android:src="@drawable/ic_baseline_videocam_24"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/walletImg12"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="#262626"
                    android:padding="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@id/videoImg12"
                    android:src="@drawable/ic_wallet_filled_money_tool"
                    app:tint="@color/white" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="#262626"
                    android:padding="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@id/walletImg12"
                    android:src="@drawable/ic_share_box"
                    app:tint="@color/white" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:background="#262626"
                android:layout_alignParentEnd="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="0"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="People Waiting"
                        android:textSize="12sp"/>


                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>




</FrameLayout>